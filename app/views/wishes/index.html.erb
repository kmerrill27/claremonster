<h1>Listing wishes</h1>

<table>
  <tr>
    <th>Wish</th>
    <th>Description</th>
    <th>Proposed incentive</th>
    <th>Upvotes needed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishes.each do |wish| %>
  <tr>
    <td><%= wish.title %></td>
    <td><%= wish.description %></td>
    <td><%= wish.deal %></td>
    <td><%= wish.threshold %></td>
    <td><%= link_to 'Show', wish %></td>
    <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
    <td><%= link_to 'Destroy', wish, confirm: 'Crush this wish?', method: :delete %></td>
  </tr>
<% end %>
</table>

